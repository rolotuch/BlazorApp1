        }
    }

    protected void NavegarMisCursos()
    {
        navigationManager.NavigateTo("/MisCursos");
    }

    //se elimino el metodo de mostrar error porque se paso como servicio al igual que generar token

    private void cerrarCapa()
    {
        mostrarError = false;
    }

    
}
